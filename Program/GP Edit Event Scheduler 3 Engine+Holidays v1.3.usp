	             }
	          }
	        }
       }
      }

      iLastCheckedTime = iCurrentTime;

      //delay((61 - GetSecondsNum()) * 100);   //wait between loops
      delay(DELAYTIME);

    } // while(enable)

  } // while(1)
}
