signed_integer_function WriteEventFile()
{
  signed_integer iFileHandle;
  signed_integer iErrCode;
  string  sWriteBuf[MAX_LINE_SIZE];
  string  sTemp[MAX_LINE_SIZE];
  string  sTime[4];
  string  Hidden[1];
